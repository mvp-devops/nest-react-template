{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../static/**/*",
        "outDir": "dist/static",
        "watchAssets": true
      },
      {
        "include": "../client/build/**/*",
        "outDir": "dist/static",
        "watchAssets": true
      },
      {
        "include": "../documentation/**/*",
        "outDir": "dist/static/documentation",
        "watchAssets": true
      }
    ]
  }
}
